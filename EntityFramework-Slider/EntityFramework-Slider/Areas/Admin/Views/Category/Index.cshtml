@model IEnumerable<Category>
@{
    ViewData["Title"] = "Category";
}

<div class="container my-5">
    <a class="btn btn-success text-white" asp-action="Create" style="float:right">Create</a>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Operations
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>

                        <td>
                            @category.Name
                        </td>
                        <td style="display: flex; gap: 10px;">
                            <a class="btn btn-outline-info" asp-action="Detail" asp-route-id="@category.Id">Info</a>
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@category.Id">Edit</a>
                            <form asp-action="Delete" asp-route-id="@category.Id" method="post">   @*Delete burada form yazirq yalniz, cunku Deletein seyfesi yoxdu burda submit olur.ama obirler gedir viewda submit olur*@
                                <button type="submit" class="btn btn-outline-danger">Delete</button>
                           </form>
                           
                        </td>

                    </tr>
                }

            </tbody>
        </table>
    </div>



</div>

